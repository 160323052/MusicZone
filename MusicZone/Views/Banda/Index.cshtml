@model List<MusicZone.Models.Banda>

@if (Model.Count == 0)
{

        <h2>Sem bandas ainda...</h2>
}

<table class="table">
    <tr>
        <th>Nome</th>
        <th>Numero de Elementos</th>
        <th>Genero</th>
        
    </tr>
    @foreach (MusicZone.Models.Banda b in Model)
    {
    <tr>
        <th>@b.Nome</th>
        <th>@b.NumeroElementos</th>
        <th>@b.Genero</th>
    </tr>

    }
</table>
    
    <div>
        <button type="button" class="btn btn-primary" asp-controller="Bandas" asp-action="NovaBanda" class="glyphicon-plus">Adicionar Banda</button>
    </div>
    


